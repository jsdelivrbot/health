<script>
import { Toast, Indicator, MessageBox } from "mint-ui";
import $ from "jquery";
export default {
  data() {
    return {
      lists: {},
      Nodel: true,
      value: "",
      url_s:  this.$store.state.skyUrl,     /* 四凯测试 */
      page: "",
      updatamore: false,
      Isclick:"",     //是否可以点击
      nodata: "",
    };
  },

  created() {
    this.query();
  },
  methods: {
    query() {
      /* 获取数据 */
      //获取从检查预约单页面过来的状态
      localStorage.removeItem("medicalCardId")
      if(this.$route.query.Isclick == undefined){
        this.Isclick = false
      }else{
        this.Isclick = true
      }
      console.log('route',this.$route.query)
      this.lists = {};
      Indicator.open("加载中...");
      this.page = 1;
      this.axios
        .get( this.url_s+"/MedicalCard/findMedicalCardList", {
          params: {
            patientId: this.$route.query.patientId,
            page: this.page,
            hospitalId: this.$route.query.hospitalId
          }
        })
        .then(res => {
          Indicator.close();
          console.log('res',res)
          if (res.data != "no") {
            this.lists = res.data;
            this.updatamore = true;
          } else {
            this.nodata = true;
            Toast("暂无就诊卡信息..");
          }
        })
        .catch(err => {
          Indicator.close()
          Toast(err);
        });
    },
    checkDivScroolTop(){
          //获取节点
      Indicator.open('加载中...')
      let _this = this;
      _this.page++;
      _this.axios       //this.info.url_s + "/api/doctor/findList"
          .get( _this.url_s+"/MedicalCard/findMedicalCardList", {
          params: {
              patientId: _this.$route.query.patientId,
              page: _this.page,
              hospitalId: _this.$route.query.hospitalId
          }
          })
          .then(function(res) {
              Indicator.close();
              console.log(res)
              if(res.data != 'no'){
                  _this.lists = _this.lists.concat(res.data);
              }else{
                  Toast("没有更多就诊卡..")
              }
          }).catch(err=>{
              Indicator.close();
              Toast('加载失败..')
          })
    },

    /* 从不同页面过来返回不同界面 */
    back_to() {       
      if(this.Isclick == true ){
        this.$router.push({name:"advisory",query:{"userId":this.$route.query.userId}})
      }else{
        this.$router.push("./add_visit");
      }
    },
    /* 点击预约 */
    yuyue(){    
      if(this.Isclick == true){
        MessageBox.confirm("是否预约?").then(action => {
          this.axios
          .get(this.url_s+"/appointmentSearch/updateAppointment", {
            params: {
              yyid: this.$route.query.yyid
            }
          })
          .then(res => {
            console.log("del", res);
            　　if(res.data == true) {
                Toast({message:'预约成功',duration:500})
                this.$router.push({name:"advisory",query:{"userId":this.$route.query.userId}})
              } else {
                  Toast("预约失败");
              }
          }).catch(err => {
            Toast(err);
          });
        });
      }
    },
    del() {
      /* 点击显示删除按钮 */
      if (this.Nodel == true) {
        this.Nodel = false;
      } else {
        this.Nodel = true;
      }
    },
    add_card(){     /* 新增就诊卡 */
      this.$router.push({name:'add_card',query:{
        "patientId": this.$route.query.patientId
      }})
    },
      /* 删除就诊卡 */
    delCard() {
      let medicalCardId = "";
      $.each($("input:checkbox"), function() {
        if (this.checked) {
          medicalCardId += $(this).val() + ",";
        }
      });
      if(medicalCardId == ''){
         Toast('请选择要删除的就诊卡...')
         return 
      }
      MessageBox.confirm("是否删除就诊卡?").then(action => {
        this.axios
          .get( this.url_s+"/MedicalCard//deleteMedicalCard", {
            params: {
              medicalCardId: medicalCardId
            }
          })
          .then(res => {
            console.log("del", res);
            if (res.status) {
              Toast("删除成功.");
              this.query();
              this.Nodel = true; 
            } else {
              Toast("删除失败...");
            }
          })
          .catch(err => {
            Toast("删除失败...");
          });
      });
    }
  }
};
</script>

